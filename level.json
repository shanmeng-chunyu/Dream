{
  // "backgroundPath": (字符串)
  // 描述: 关卡的背景图片路径。
  // 用途: P2的场景交互模块将使用这个路径来加载并显示关卡背景。
  // 注意: 路径应该遵循Qt资源系统（qrc）的格式。
  "backgroundPath": ":/images/backgrounds/level_1_background.png",

  // "pathPoints": (坐标点对象数组)
  // 描述: 定义敌人移动的路径，按顺序连接成一条折线。
  // 用途: P5创建的 Enemy 对象会沿着这个路径点列表移动。
  // 格式: 每个点是一个包含 "x" 和 "y" 两个数值键的对象。
  "pathPoints": [
    { "x": 0, "y": 150 },
    { "x": 200, "y": 150 },
    { "x": 200, "y": 400 },
    { "x": 500, "y": 400 },
    { "x": 500, "y": 100 },
    { "x": 800, "y": 100 }
  ],

  // "towerBases": (坐标点对象数组)
  // 描述: 定义可以在哪些位置建造防御塔。
  // 用途: P2的场景交互模块会读取这些位置，并在这些地方显示可点击的塔基座。
  // 格式: 与 pathPoints 相同，每个点是一个包含 "x" 和 "y" 的对象。
  "towerBases": [
    { "x": 100, "y": 250 },
    { "x": 300, "y": 300 },
    { "x": 400, "y": 200 },
    { "x": 600, "y": 200 }
  ],

  // "waves": (出怪波次信息对象数组)
  // 描述: 定义本关卡的所有出怪波次。
  // 用途: P5的 WaveManager 会按顺序读取这个数组来生成一波波的敌人。
  // 格式: 每个对象对应 WaveInfo 结构体。
  "waves": [
    {
      // "enemyType": (整数)
      // 描述: 敌人的类型ID。这个ID将用于从下文提到的 "enemies.json" 文件中查找具体敌人属性。
      "enemyType": 0,
      // "enemyCount": (整数)
      // 描述: 这一波要生成的该类型敌人的总数量。
      "enemyCount": 10,
      // "spawnInterval": (整数)
      // 描述: 生成每个敌人的时间间隔，单位是毫秒。
      "spawnInterval": 1500
    },
    {
      "enemyType": 1,
      "enemyCount": 5,
      "spawnInterval": 2000
    },
    {
      // 这是Boss波次
      "enemyType": 10, // 假设10是Boss的ID
      "enemyCount": 1,
      "spawnInterval": 5000
    }
  ]
}
