{
  // "backgroundPath" 保持不变
  "backgroundPath": ":/images/backgrounds/level_1_background.png",

  // 新增: "gridSize" (对象)
  // 描述: 定义地图的网格维度。这是所有相对坐标的基础。
  // 用途: 渲染和逻辑代码将使用这个尺寸来计算每个格子的实际像素大小和位置。
  "gridSize": {
    "cols": 20,
    "rows": 15
  },

  // "pathPoints": (网格坐标对象数组)
  // 描述: 敌人移动路径的网格点索引。
  // 格式: 每个点是一个包含 "col" (列) 和 "row" (行) 两个整数键的对象。
  // 注意: 索引从0开始。{ "col": 0, "row": 3 } 表示第1列，第4行。
  "pathPoints": [
    { "col": 0, "row": 3 },
    { "col": 4, "row": 3 },
    { "col": 4, "row": 8 },
    { "col": 12, "row": 8 },
    { "col": 12, "row": 2 },
    { "col": 19, "row": 2 }
  ],

  // "towerBases": (网格坐标对象数组)
  // 描述: 可以建造防御塔的网格单元。
  // 格式: 与 pathPoints 相同。
  "towerBases": [
    { "col": 2, "row": 5 },
    { "col": 6, "row": 6 },
    { "col": 10, "row": 4 },
    { "col": 15, "row": 4 }
  ],

  // "waves" 保持不变，其逻辑与坐标系统无关
  "waves": [
    {
      "enemyType": 0,
      "enemyCount": 10,
      "spawnInterval": 1500
    },
    {
      "enemyType": 1,
      "enemyCount": 5,
      "spawnInterval": 2000
    },
    {
      "enemyType": 10,
      "enemyCount": 1,
      "spawnInterval": 5000
    }
  ]
}

